<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
   <center>
      <VBox prefHeight="400.0" prefWidth="640.0" BorderPane.alignment="CENTER">
        <children>
          <MenuBar VBox.vgrow="NEVER">
            <menus>
              <Menu mnemonicParsing="false" text="File">
                <items>
                  <MenuItem mnemonicParsing="false" onAction="#loadMap" text="Load New Map" />
                        <MenuItem mnemonicParsing="false" onAction="#loadMap" text="Load New Delivery Request" />
                </items>
              </Menu>
                  <Menu mnemonicParsing="false" text="Tools">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadMap" text="Compute Round Set" />
                     </items>
                  </Menu>
              <Menu mnemonicParsing="false" text="Draw">
                <items>
                  <MenuItem mnemonicParsing="false" onAction="#drawRandomLine" text="Draw Line" />
                </items>
              </Menu>
            </menus>
          </MenuBar>
            <ToolBar prefHeight="101.0" prefWidth="640.0">
               <items>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <VBox alignment="CENTER" onMouseClicked="#loadMap" style="-fx-cursor: hand;" styleClass="toolbar-card">
                                 <children>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/placeholder.png" />
                                       </image>
                                    </ImageView>
                                    <Label alignment="CENTER" prefHeight="18.0" prefWidth="60.0" text="Map" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" style="-fx-cursor: hand;" styleClass="toolbar-card">
                                 <children>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/map.png" />
                                       </image>
                                    </ImageView>
                                    <Label alignment="CENTER" prefHeight="18.0" prefWidth="60.0" text="Delivery" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Label alignment="CENTER" text="Upload Files">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" />
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <VBox alignment="CENTER" style="-fx-cursor: hand;" styleClass="toolbar-card">
                                 <children>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/search.png" />
                                       </image>
                                    </ImageView>
                                    <Label alignment="CENTER" prefHeight="18.0" prefWidth="70.0" text="Compute" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Label alignment="CENTER" text="Compute Rounds">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" />
               </items>
            </ToolBar>
          <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
               <children>
                  <Canvas fx:id="canvas" height="375.0" width="640.0" />
               </children>
          </AnchorPane>
        </children>
      </VBox>
   </center>
</BorderPane>
